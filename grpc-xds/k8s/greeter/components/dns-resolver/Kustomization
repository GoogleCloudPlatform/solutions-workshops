# Use the gRPC DNS resolver instead of xDS to discover greeter-leaf from greeter-intermediary.

apiVersion: kustomize.config.k8s.io/v1alpha1
kind: Component
metadata:
  name: greeter-dns-resolver
  annotations:
    config.kubernetes.io/local-config: "true"
patches:
- path: patch-headful-service.yaml
  target:
    version: v1
    kind: Service
    name: greeter-.*
- path: patch-next-hop-dns.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: greeter-intermediary
