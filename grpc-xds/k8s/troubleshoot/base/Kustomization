kind: Kustomization
metadata:
  name: troubleshoot
  annotations:
    config.kubernetes.io/local-config: "true"
commonLabels:
  app.kubernetes.io/part-of: grpc-xds
components:
- ../components/tools
images:
- name: busybox
  newName: busybox:stable-glibc
  digest: sha256:51d373b90d58729e81641b49dcf52139090a89f1e2a4e631632db10cfbfd184d
patches:
- path: patch-resources.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: bastion
