# Use this for a no-xDS deployment.

apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
metadata:
  name: envoy-base
  annotations:
    config.kubernetes.io/local-config: "true"
labels:
- pairs:
    app.kubernetes.io/part-of: grpc-xds
  includeSelectors: false
  includeTemplates: true
images:
- name: busybox
  newName: docker.io/library/busybox:stable-glibc
- name: envoy
  newName: docker.io/envoyproxy/envoy:v1.32-latest
  # newName: docker.io/envoyproxy/envoy:distroless-v1.32-latest
patches:
- path: patch-config.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: envoy
# - path: patch-probes.yaml
#   target:
#     group: apps
#     version: v1
#     kind: Deployment
#     name: envoy
- path: patch-resources.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: envoy
resources:
- namespace.yaml
- service-account.yaml
- deployment.yaml
- service.yaml
