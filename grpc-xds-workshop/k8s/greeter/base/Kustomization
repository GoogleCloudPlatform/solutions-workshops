apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
metadata:
  name: greeter
  annotations:
    config.kubernetes.io/local-config: "true"
commonLabels:
  app.kubernetes.io/part-of: grpc-xds-workshop
patches:
- path: patch-experimental-flags.yaml
  target:
    group: apps
    kind: Deployment
    name: greeter-.*
    version: v1
- path: patch-probes.yaml
  target:
    group: apps
    kind: Deployment
    name: greeter-.*
    version: v1
- path: patch-resources.yaml
  target:
    group: apps
    kind: Deployment
    name: greeter-.*
    version: v1
resources:
- namespace.yaml
- service-accounts.yaml
- deployments.yaml
- services.yaml
