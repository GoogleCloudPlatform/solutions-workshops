# Extension of greeter-diy-xds, adding patches for fetching the zone label from the k8s node.

apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
metadata:
  name: greeter-kind-xds
  annotations:
    config.kubernetes.io/local-config: "true"
images:
- name: kubectl
  newName: bitnami/kubectl
  digest: sha256:6485a923f6f4ff3d42d871ce5bd45ee8f25a303c44972a4ad31ddd895082fc22
patches:
- path: patch-zone-label.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: greeter-.*
- path: patch-certs-greeter-intermediary.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: greeter-intermediary
- path: patch-certs-greeter-leaf.yaml
  target:
    group: apps
    version: v1
    kind: Deployment
    name: greeter-leaf
resources:
- ../diy-xds
- cluster-role.yaml
- cluster-role-bindings.yaml
- greeter-certificates.yaml
